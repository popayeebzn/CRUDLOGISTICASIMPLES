@model MateriaisModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Logistica</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/d393dc2451.js" crossorigin="anonymous"></script>

    <style>
        body {
            background-color: #1C1C1C;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .menu {
            position: relative;
            height: 650px;
            width: 900px;
            background-color: darkslategray;
            border-radius: 30px;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            margin: 0;
            padding: 20px;
        }

        .Titulo {
            margin-top: 40px;
            margin-bottom: auto;
            color: whitesmoke;
            align-self: center;
        }

        .voltar {
            position: absolute;
            top: 20px;
            left: 20px;
            display: flex;
            align-items: center;
        }

            .voltar i {
                margin-right: 5px;
            }

        .cadastro {
            background-color: aliceblue;
            height: 490px;
            width: 900px;
        }

        /* Adicionando o estilo para centralizar a placeholder e o texto digitado */
        .form-control::placeholder,
        .form-control {
            text-align: center;
        }

        /* Adicionando o estilo para tornar a label em negrito */
        .form-label {
            font-weight: bold;
        }

        .select {
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
            font-weight: bold;
        }
    </style>

</head>

<body>

    <div class="menu">
        <a role="button" class="btn btn-dark voltar" asp-controller="Home" asp-action="Index">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
        <h1 class="Titulo">CADASTRAR MATERIAIS</h1>
        <br />

        <div class="cadastro text-center">

            <br />
            <form asp-controller="Home" asp-action="CMateriais" method="post">

                <div class="row g-3 m-2">
                    <div class="col-md-6">
                        <label class="form-label">Nome do Material</label>
                        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome" aria-label="Nome">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Quantidade de Material</label>
                        <input type="text" asp-for="Quantidade" class="form-control" placeholder="Quantidade" aria-label="Quantidade">
                    </div>
                </div>

                <div class="row g-3 m-2 justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Fornecedor do Material</label>
                        <select asp-for="FornecedorId" class="form-select form-select-lg mb-2 text-center select" aria-label="Large select example">
                            <option selected class="text-center">Selecione o Fornecedor do Material</option>
                            @foreach (var fornecedor in ViewBag.Fornecedores)
                            {
                                <option value="@fornecedor.Id">@fornecedor.Nome</option>
                            }
                        </select>
                    </div>
                </div>


                <br />

                    <button type="submit" class="btn btn-primary m-3">CADASTRAR</button>

            </form>
            <br />
        </div>

        <br />

    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
