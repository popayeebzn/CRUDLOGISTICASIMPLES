@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Logistica</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/d393dc2451.js" crossorigin="anonymous"></script>


    <style>

        body{
            background-color: #1C1C1C;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .menu {
            height: 450px;
            width: 600px;
            background-color: darkslategray;
            border-radius: 30px;
            display: flex;
            flex-direction: column; /* Adicionado para organizar os botões em coluna */
            justify-content: center;
            align-items: center;
            margin: 0;
            padding: 20px; /* Adicionado para espaçamento interno */
        }

            /* Adicionado estilo para os botões */
            .menu a {
                width: 300px;
                height: 50px;
                margin-bottom: 10px;
                border-radius: 30px;
                text-align: center;
                line-height: 50px; /* Adicionado para centralizar verticalmente o texto */
                display: flex; /* Adicionado para centralizar horizontalmente o texto */
                align-items: center; /* Adicionado para centralizar horizontalmente o texto */
                justify-content: center; /* Adicionado para centralizar horizontalmente o texto */
            }

            .Titulo{

                margin-bottom: 30px;    
                color:whitesmoke
            }

            

    </style>

</head>

<body>

    <div class="menu">


        <h1 class="Titulo">CENTRO DE LOGISTICA</h1>

        <a role="button" class="btn btn-dark" asp-controller="Home" asp-action="CFornecedores">Cadastrar Fornecedores</a>
        <a role="button" class="btn btn-dark" asp-controller="Home" asp-action="CMateriais">Cadastrar Materiais</a>
        <a role="button" class="btn btn-dark" asp-controller="Home" asp-action="MEstoques">Movimentar Estoque/Materiais</a>
        <a role="button" class="btn btn-dark" asp-controller="Home" asp-action="ListaFornecedores">Lista de Fornecedores</a>



    </div>







    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
